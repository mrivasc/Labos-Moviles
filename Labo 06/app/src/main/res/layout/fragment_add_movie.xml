<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.movie.AddMovieFragment"
    android:background="@color/background_layout">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="New movie"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/medium_gap"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xlarge_gap"
            android:background="@color/cardLayout"
            android:hint="Name"
            android:paddingStart="@dimen/medium_gap"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/input_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xlarge_gap"
            android:layout_marginTop="@dimen/medium_gap"
            android:background="@color/cardLayout"
            android:hint="Category"
            android:paddingStart="@dimen/medium_gap"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/input_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xlarge_gap"
            android:layout_marginTop="@dimen/medium_gap"
            android:background="@color/cardLayout"
            android:hint="Description"
            android:paddingStart="@dimen/medium_gap"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/input_calification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xlarge_gap"
            android:layout_marginTop="@dimen/medium_gap"
            android:background="@color/cardLayout"
            android:hint="Calification"
            android:paddingStart="@dimen/medium_gap"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/buttonColor"
            android:text="SUBMIT"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>